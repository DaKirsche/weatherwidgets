<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widgetLayoutForecast"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="2dip"
              android:background="@drawable/forecast_widget_background">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/widgetLayoutHeadContainer"
                  android:layout_width="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/textView_forecastwidget_city"
                android:text="Neustadt in Holstein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"/>
        <ImageView
                android:layout_width="92px"
                android:layout_height="18px"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView_widget_forecast_api"
                android:src="@drawable/wettercom_logo_small" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/widgetLayoutIconContainer"
                  android:layout_width="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/widgetLayoutToday"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginRight="5dp">
            <TextView android:id="@+id/textView_forecastwidget_nametoday"
                      android:text="Heute"
                      android:layout_width="match_parent"
                      android:textSize="7px"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
            <ImageView android:id="@+id/widget_forecast_icon_today"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_marginLeft="25dp"
                       android:src="@drawable/d_0_b" />
            <TextView android:id="@+id/textView_forecastwidget_today_0"
                    android:text="16°"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content"
                    android:textSize="7px"
                    android:textColor="#ffffff"/>
            <TextView android:id="@+id/textView_forecastwidget_today_txt"
                      android:text="@string/weather_code_sunny"
                      android:layout_width="match_parent"
                      android:textSize="5px"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/widgetLayoutToday1"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginRight="5dp">
            <TextView android:id="@+id/textView_forecastwidget_name_1"
                      android:text="Mittwoch"
                      android:layout_width="match_parent"
                      android:textSize="7px"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
            <ImageView android:id="@+id/widget_forecast_icon_1"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_marginLeft="25dp"
                       android:src="@drawable/d_2_b" />
            <TextView android:id="@+id/textView_forecastwidget_today_1"
                      android:text="12°"
                      android:layout_width="match_parent"
                      android:textSize="7px"
                      android:layout_marginTop="-10dp"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
            <TextView android:id="@+id/textView_forecastwidget_today_1_txt"
                      android:text="@string/weather_code_snowy"
                      android:layout_width="match_parent"
                      android:textSize="5px"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/widgetLayoutToday2"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginRight="5dp">
            <TextView android:id="@+id/textView_forecastwidget_name_2"
                      android:text="Donnerstag"
                      android:layout_width="match_parent"
                      android:textSize="7px"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
            <ImageView android:id="@+id/widget_forecast_icon_2"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_marginLeft="25dp"
                       android:src="@drawable/d_7_b" />
            <TextView android:id="@+id/textView_forecastwidget_today_2"
                      android:text="1°"
                      android:layout_width="match_parent"
                      android:textSize="7px"
                      android:layout_marginTop="-10dp"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
            <TextView android:id="@+id/textView_forecastwidget_today_2_txt"
                      android:text="@string/weather_code_rainy"
                      android:layout_width="match_parent"
                      android:textSize="5px"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>