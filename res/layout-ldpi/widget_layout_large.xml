<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_margin="2dip"
    android:background="@drawable/large_widget_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widgetLayout1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_widget_large_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20px" />
        <TextView
		    android:id="@+id/textView_widget_large_cityname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/widget_error_loading"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#ffffff"
		    android:textSize="30px" />

        <TextView
            android:id="@+id/textView_widget_large_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#ffffff"
            android:textSize="20px" />


    </LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/widgetLayout2"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

		<ImageView
		    android:id="@+id/imageView_widget_large_weather_icon"
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:src="@drawable/d_3_b" android:layout_gravity="center"/>

	</LinearLayout>

	 <LinearLayout
	     xmlns:android="http://schemas.android.com/apk/res/android"
	     android:id="@+id/widgetLayout3"
	     android:layout_width="100dp"
	     android:layout_height="wrap_content"
	     android:orientation="vertical" android:layout_gravity="center">

		<TextView
		    android:id="@+id/textView_widget_large_temperature"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textColor="#ffffff"
		    android:textSize="45px" />
		<TextView
		    android:id="@+id/textView_widget_large_weather"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textColor="#ffffff"
		    android:textSize="20px" />
         <TextView
                 android:id="@+id/textView_widget_large_datetime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                 android:textColor="#ffffff"
                 android:textSize="15px" />
		<ImageView
		    android:layout_width="92px"
		    android:layout_height="18px"
		    android:layout_gravity="bottom"
		    android:layout_marginTop="2dp"
		    android:id="@+id/imageView_widget_large_api"
		    android:src="@drawable/wettercom_logo_small" />

	</LinearLayout>

	

</LinearLayout>