<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayoutClock"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="2dip"
    android:padding="0dp"
    android:background="@drawable/widget_bg_clock_9patch">

    <LinearLayout
            android:id="@+id/widget_wc_clock"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="100dp">
        <ImageView android:id="@+id/widget_wc_h1"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="0dp"
                   android:padding="0dp"
                   android:src="@drawable/time_b" />
        <ImageView android:id="@+id/widget_wc_h2"
                   android:layout_width="40dp"
                   android:layout_marginRight="0dp"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:src="@drawable/time_b" />
        <ImageView android:id="@+id/widget_wc_dp"
                   android:layout_width="40dp"
                   android:layout_marginRight="0dp"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:src="@drawable/time_p" />
        <ImageView android:id="@+id/widget_wc_m1"
                   android:layout_width="40dp"
                   android:layout_marginRight="0dp"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:src="@drawable/time_b" />
        <ImageView android:id="@+id/widget_wc_m2"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:src="@drawable/time_b" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/widget_wc_information"
            android:orientation="horizontal"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical">
        <ImageView android:id="@+id/widget_wc_weather"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="0dp"
                   android:src="@drawable/d_9_b" />

        <LinearLayout
                android:id="@+id/widget_wc_weatherinformation"
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical">
            <TextView android:id="@+id/widget_wc_degree"
                      android:text=""
                      android:textColor="#FFFFFF"
                      android:textSize="60px"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/widget_wc_weathername"
                      android:text=""
                      android:textColor="#FFFFFF"
                      android:textSize="20px"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/widget_wc_cityinformation"
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_gravity="center_vertical">
            <TextView android:id="@+id/widget_wc_plz"
                      android:text=""
                      android:textSize="20px"
                      android:textColor="#FFFFFF"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/widget_wc_cityname"
                      android:text="@string/widget_error_loading"
                      android:textSize="35px"
                      android:textColor="#FFFFFF"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/widget_wc_addit"
                      android:text=""
                      android:textSize="20px"
                      android:textColor="#FFFFFF"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            <ImageView
                    android:layout_width="92px"
                    android:layout_height="18px"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="3dp"
                    android:id="@+id/imageView_widget_clock_api"
                    android:src="@drawable/wettercom_logo_small" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>