<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dip" 
    android:background="#000000">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/widgetLayout2"
	    android:layout_width="60dp"
        android:layout_gravity="center_vertical"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

		<ImageView
		    android:id="@+id/imageView_widget_small_weather_icon"
		    android:layout_width="60dp"
		    android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
		    android:src="@drawable/regen" />

	</LinearLayout>

	 <LinearLayout
	     xmlns:android="http://schemas.android.com/apk/res/android"
	     android:id="@+id/widgetLayout3"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:orientation="vertical" >

		<TextView
		    android:id="@+id/textView_widget_small_city"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Lübeck"
		    android:textColor="#ffffff"
		    android:textSize="12sp" />
		<TextView
		    android:id="@+id/textView_widget_small_temperature"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="16° C"
		    android:textColor="#ffffff"
		    android:textSize="16sp" />
		<TextView
		    android:id="@+id/textView_widget_small_weather"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Regen"
		    android:textColor="#ffffff"
		    android:textSize="12sp" />

		<ImageView
		    android:layout_width="92px"
		    android:layout_height="18px"
		    android:layout_gravity="bottom"
		    android:layout_marginTop="30dp"
		    android:id="@+id/imageView_widget_small_api"
		    android:src="@drawable/wettercom_logo_small" />

	</LinearLayout>

	

</LinearLayout>