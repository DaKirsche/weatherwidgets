<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WidgetSettingsDetailActivity" >
	
    <TextView
        android:text="@string/wsd_enter_zip_or_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/wsd_search_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:inputType="text">
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/wsd_start_search_button" 
        android:text="@string/wsd_start_search"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_lbl_poweredby"
            android:id="@+id/textView_wsd_poweredby" android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_wsd_powered_by" android:layout_gravity="right|center_vertical"
            android:src="@drawable/wettercom_logo_small" android:layout_marginRight="15dp"
            android:contentDescription="@string/wettercom_logo_description"/>
    <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:id="@+id/textView_output_console"/>

</LinearLayout>