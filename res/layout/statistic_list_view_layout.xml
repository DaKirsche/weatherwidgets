<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statistic_listview_item_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/statistic_listview_item_icon"
               android:src="@drawable/icon_home"
               android:layout_width="40dp"
               android:layout_height="40dp" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/wsci_row_text_container"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" >
        <TextView android:id="@+id/statistic_listview_item_headline"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="22sp"/>
        <TextView android:id="@+id/statistic_listview_item_subline"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>