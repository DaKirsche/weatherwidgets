<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dip" 
    android:background="@drawable/large_widget_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widgetLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/_widget_large_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23551"
            android:textColor="#ffffff"
            android:textSize="10sp" />
        <TextView
		    android:id="@+id/textView_widget_large_cityname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Lübeck"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#ffffff"
		    android:textSize="12sp" />

        <TextView
            android:id="@+id/_widget_large_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deutschland\n"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/_widget_large_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.03.2013"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/widgetLayout2"
	    android:layout_width="120dp"
        android:layout_gravity="center_vertical"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

		<ImageView
		    android:id="@+id/imageView_widget_large_weather_icon"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:src="@drawable/regen" android:layout_gravity="center"/>

	</LinearLayout>

	 <LinearLayout
	     xmlns:android="http://schemas.android.com/apk/res/android"
	     android:id="@+id/widgetLayout3"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_margin="5dp"
	     android:orientation="vertical" android:layout_gravity="center">

		<TextView
		    android:id="@+id/textView_widget_large_temperature"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="16° C"
		    android:textColor="#ffffff"
		    android:textSize="22sp" />
		<TextView
		    android:id="@+id/textView_widget_large_weather"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Regen"
		    android:textColor="#ffffff"
		    android:textSize="12sp" />

		<ImageView
		    android:layout_width="92px"
		    android:layout_height="18px"
		    android:layout_gravity="bottom"
		    android:layout_marginTop="30dp"
		    android:id="@+id/imageView_widget_large_api"
		    android:src="@drawable/wettercom_logo_small" />

	</LinearLayout>

	

</LinearLayout>