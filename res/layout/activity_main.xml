<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/acticity_bg_right_bottom_xmlimage"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_main_widgets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/main_btn_widgets" />

    <Button
        android:id="@+id/button_main_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/main_btn_statistics" />

    <Button
        android:id="@+id/button_main_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/main_btn_info" />

</LinearLayout>